<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.jiahaoliuliu.android.ereptum"
      android:versionCode="2"
      android:versionName="1.1">
    <uses-sdk android:minSdkVersion="7" />

    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name">
        <activity android:name=".Ereptum"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Black">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InCallScreen"
        		  android:theme="@android:style/Theme.Black.NoTitleBar">
        </activity>
        <activity android:name=".AnswerCallScreen"
        		  android:theme="@android:style/Theme.Black.NoTitleBar">
        </activity>
        
    </application>
    <!-- The application can make the phone vibrate -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    
    <!-- The application can wake up even when the phone is locked -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- The application will skip the key guard -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    
</manifest>